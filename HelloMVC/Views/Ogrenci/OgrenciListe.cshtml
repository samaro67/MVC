@model List<Ogrenci> 
@{
    ViewData["Title"] = "Öğrenci Listesi";
}

<h2>Öğrenci Listesi</h2>

<p>
    <a class="btn btn-success" href="/Ogrenci/OgrenciEkle">+ Yeni Öğrenci Ekle</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Ad</th>
            <th>Soyad</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Ogrenciid</td>
                <td>@item.Ad</td>
                <td>@item.Soyad</td>
                <td>
                    <a class="btn btn-info btn-sm" href="/Ogrenci/OgrenciDetay/@item.Ogrenciid">Detay</a>
                    <a class="btn btn-warning btn-sm" href="/Ogrenci/OgrenciGuncelle/@item.Ogrenciid">Güncelle</a>
                    <a class="btn btn-danger btn-sm" href="/Ogrenci/OgrenciSil/@item.Ogrenciid" onclick="return confirm('Silmek istediğinize emin misiniz?');">Sil</a>
                </td>
            </tr>
        }
    </tbody